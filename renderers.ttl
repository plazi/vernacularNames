[] a r2h:Renderer;
    r2h:type rdfs:Resource;
    r2h:context gt:HtmlBody;
    r2h:mustache """
        <main class='container elevated'>
            {{{:render . r2h:Default}}}
        </main>
    """.

[] a r2h:Renderer;
    r2h:type rdfs:Resource;
    r2h:context gt:HtmlHead;
    r2h:mustache """
        {{{:render . gt:HtmlTitle}}}
        <link rel='stylesheet' href='/style.css'>
        <link rel='stylesheet' href='http://localhost:5055/style.css'>
    """.

[] a r2h:Renderer;
    r2h:type rdfs:Resource;
    r2h:context gt:HtmlTitle;
    r2h:mustache """
        <title>Plazi Vernadular Names -  {{{.}}}</title>
    """.

# Specific Renderers

[] a r2h:Renderer;
    r2h:type schema:WebPage;
    r2h:context r2h:Default;
    r2h:mustache """
        {{{@prefix s: <http://schema.org/>}}}
        {{{@prefix r2h: <http://rdf2h.github.io/2015/rdf2h#>}}}
        <h1>{{{:render . s:name}}}</h1>
        {{#s:mainContentOfPage}}
            <div class='card'>
                {{{:render . s:Article}}}
            </div>
        {{/s:mainContentOfPage}}
        <div class='card only_table'>
            {{{:render . r2h:Default-Naked}}}
        </div>
    """.